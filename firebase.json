{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "venv",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "auth": {
            "port": 9099,
            "host": "0.0.0.0"
        },
        "functions": {
            "port": 5001,
            "host": "0.0.0.0"
        },
        "firestore": {
            "port": 8080,
            "host": "0.0.0.0"
        },
        "storage": {
            "port": 9199,
            "host": "0.0.0.0"
        },
        "ui": {
            "enabled": true,
            "port": 4000,
            "host": "0.0.0.0"
        },
        "singleProjectMode": true
    }
}
